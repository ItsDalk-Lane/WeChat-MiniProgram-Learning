/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333333;
  background-color: #B3E5FC;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  overflow-x: hidden;
}

/* 去除按钮默认样式 */
button {
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  border: none;
  border-radius: 0;
  box-sizing: border-box;
  overflow: visible;
}

button::after {
  border: none;
} 
