/**index.wxss**/
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #B3E5FC; /* 淡蓝色背景 */
  position: relative;
  overflow: hidden;
}

/* 标题和副标题区域 */
.title-section {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #4A2DBD;
  font-weight: 500;
}

/* 控制按钮 */
.controls {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  z-index: 100;
}

.control-circle {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #333;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
}

/* 内容区域 */
.content {
  flex: 1;
  display: flex;
  position: relative;
  z-index: 5;
  justify-content: center;
  padding-top: 60rpx;
  flex-direction: column;
  align-items: center;
}

.character-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 60%;
}

.character {
  position: relative;
  width: 250rpx;
  height: 300rpx;
  margin-right: 100rpx;
  align-self: flex-start;
  margin-left: 80rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="150" viewBox="0 0 100 150"><circle cx="50" cy="45" r="35" fill="%236A3DE8"/><circle cx="35" cy="40" r="6" fill="white"/><circle cx="65" cy="40" r="6" fill="white"/><circle cx="35" cy="40" r="2" fill="black"/><circle cx="65" cy="40" r="2" fill="black"/><path d="M30,55 Q50,70 70,55" stroke="black" fill="none" stroke-width="2"/><rect x="25" y="80" width="50" height="40" rx="5" fill="%235D3FD3"/><rect x="15" y="120" width="25" height="30" rx="5" fill="%235D3FD3"/><rect x="60" y="120" width="25" height="30" rx="5" fill="%235D3FD3"/></svg>');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  position: relative;
  z-index: 2;
}

.decoration {
  position: absolute;
  z-index: 1;
}

.star1 {
  top: -20rpx;
  right: -20rpx;
  width: 60rpx;
  height: 60rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" fill="%23FFD700"/></svg>');
  background-size: contain;
  animation: float 3s ease-in-out infinite;
}

.bubble1 {
  top: 30rpx;
  left: -40rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  animation: float 4s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
}

.mbti-display {
  position: absolute;
  right: 30rpx;
  top: 150rpx;
  width: 320rpx;
  height: 400rpx;
}

.mbti-card {
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.mbti-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 16rpx;
  width: 85%;
}

.mbti-item {
  height: 70rpx;
  background: #FFE082; /* 浅黄色 */
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  color: #333;
  font-size: 38rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 漫画测试信息 */
.comic-info {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx 40rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  width: 80%;
  text-align: center;
  animation: fadeIn 1s ease-in-out;
}

.comic-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6D00;
  margin-bottom: 20rpx;
  position: relative;
  display: inline-block;
}

.comic-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(to right, transparent, #FF6D00, transparent);
}

.comic-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 绿色草地区域 */
.grass-area {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 260rpx;
  background: linear-gradient(to bottom, #7AD151 0%, #4CA22F 100%);
  border-radius: 50% 50% 0 0 / 20% 20% 0 0;
  z-index: 1;
}

/* 底部按钮区域 */
.footer-buttons {
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  position: relative;
  z-index: 10;
  margin-bottom: 60rpx;
  flex-direction: row;
  gap: 30rpx;
}

.btn {
  width: 300rpx;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  border: none;
  outline: none;
  letter-spacing: 2rpx;
}

.guest-btn {
  background: linear-gradient(to bottom, #FF9800, #F57C00); /* 橙色渐变 */
}

.start-btn {
  background: linear-gradient(to bottom, #FFA726, #FB8C00); /* 橙色渐变，稍微不同 */
}

.btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}
