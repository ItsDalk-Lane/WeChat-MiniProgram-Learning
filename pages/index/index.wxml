<!--index.wxml-->
<view class="page-container">
  <!-- 标题和副标题区域 -->
  <view class="title-section">
    <view class="title">性格小探险</view>
    <view class="subtitle">探索你的性格，发现你的闪光点</view>
  </view>
  
  <!-- 中间内容区域 -->
  <view class="content">
    <view class="character-container">
      <!-- 卡通人物形象 -->
      <view class="character">
        <view class="avatar"></view>
        <!-- 装饰元素 -->
        <view class="decoration star1"></view>
        <view class="decoration bubble1"></view>
      </view>
      
      <!-- MBTI图示 -->
      <view class="mbti-display">
        <view class="mbti-card">
          <view class="mbti-grid">
            <view class="mbti-item">E</view>
            <view class="mbti-item">I</view>
            <view class="mbti-item">S</view>
            <view class="mbti-item">N</view>
            <view class="mbti-item">T</view>
            <view class="mbti-item">F</view>
            <view class="mbti-item">J</view>
            <view class="mbti-item">P</view>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 卡通风格的介绍信息 -->
    <view class="info-bubble">
      <view class="bubble-title">欢迎小探险家!</view>
      <view class="bubble-text">通过有趣的问题，探索你独特的性格特点</view>
      <view class="bubble-text">准备好开始这段奇妙旅程了吗？</view>
    </view>
  </view>
  
  <!-- 彩虹装饰 -->
  <view class="rainbow-decoration"></view>
  
  <!-- 气球装饰 -->
  <view class="balloon balloon1"></view>
  <view class="balloon balloon2"></view>
  <view class="balloon balloon3"></view>
  
  <!-- 绿色草地区域 -->
  <view class="grass-area"></view>
  
  <!-- 底部按钮区域 -->
  <view class="footer-buttons">
    <button class="btn guest-btn" bindtap="onGuestMode">开始探索</button>
    <button class="btn start-btn" bindtap="onStartExplore">历史记录</button>
  </view>
</view>
