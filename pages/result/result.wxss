/* pages/result/result.wxss */
.result-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(to bottom, #B3E5FC, #81D4FA);
  padding: 30rpx;
  position: relative;
  overflow: hidden;
}

/* 结果内容区域 */
.result-content {
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  margin-bottom: 40rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 结果类型 */
.result-type {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.mbti-type {
  font-size: 60rpx;
  font-weight: bold;
  color: #6A3DE8;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 4rpx;
  margin-bottom: 10rpx;
}

.type-title {
  font-size: 36rpx;
  color: #FF9800;
  font-weight: 500;
}

/* 卡通形象 */
.character-image {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

