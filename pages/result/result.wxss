/* 各段落区域 */
.description-section, .strengths-section, .advice-section, .scores-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #F8F8F8;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #6A3DE8;
  margin-bottom: 15rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 24rpx;
  background-color: #FF9800;
  border-radius: 4rpx;
}

.section-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 分数条样式 */
.dimension-bars {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dimension-group {
  display: flex;
  flex-direction: column;
}

.dimension-labels, .dimension-values {
  display: flex;
  justify-content: space-between;
}

.dimension-label, .dimension-value {
  font-size: 28rpx;
  font-weight: 500;
  width: 50%;
  text-align: center;
}

.dimension-bar {
  height: 20rpx;
  background-color: #E0E0E0;
  border-radius: 10rpx;
  margin: 8rpx 0;
  overflow: hidden;
  position: relative;
}

.bar-fill {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background: linear-gradient(to right, #FF9800, #F57C00);
  border-radius: 10rpx;
}

/* 按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.action-btn {
  width: 45%;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  outline: none;
}

.retake-btn {
  background: linear-gradient(to bottom, #9E9E9E, #757575); /* 灰色渐变 */
  box-shadow: 0 6rpx 12rpx rgba(117, 117, 117, 0.3);
}

.share-btn {
  background: linear-gradient(to bottom, #FF9800, #F57C00); /* 橙色渐变 */
  box-shadow: 0 6rpx 12rpx rgba(245, 124, 0, 0.3);
}

.home-btn {
  margin-top: 30rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(to bottom, #6A3DE8, #4A2DBD); /* 紫色渐变 */
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 12rpx rgba(106, 61, 232, 0.3);
  border: none;
  outline: none;
}

.action-btn:active, .home-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

/* 分享弹窗 */
.share-guide {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.guide-content {
  width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.guide-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #999;
}

.guide-image {
  width: 450rpx;
  height: 675rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 16rpx;
  overflow: hidden;
}

.guide-image image {
  width: 100%;
  height: 100%;
}

.loading-image {
  font-size: 28rpx;
  color: #999;
}

.guide-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0;
}

.guide-tips text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.save-btn {
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(to bottom, #FF9800, #F57C00);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(245, 124, 0, 0.3);
  border: none;
  outline: none;
}

.save-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

/* 装饰元素 */
.decoration {
  position: absolute;
  z-index: 1;
}

.star1 {
  top: 100rpx;
  right: 60rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" fill="%23FFD700"/></svg>');
  background-size: contain;
  animation: float 3s ease-in-out infinite;
}

.star2 {
  bottom: 180rpx;
  left: 70rpx;
  width: 30rpx;
  height: 30rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" fill="%23FFD700"/></svg>');
  background-size: contain;
  animation: float 4s ease-in-out infinite;
}

.bubble1 {
  top: 200rpx;
  left: 50rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  animation: float 3.5s ease-in-out infinite;
}

.bubble2 {
  bottom: 120rpx;
  right: 80rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  animation: float 5s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
} 