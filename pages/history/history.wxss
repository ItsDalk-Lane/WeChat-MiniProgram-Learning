/* pages/history/history.wxss */
.history-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(to bottom, #B3E5FC, #81D4FA);
  padding: 30rpx;
  position: relative;
  overflow: hidden;
}

/* 头部区域 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #6A3DE8;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.clear-btn {
  font-size: 28rpx;
  color: #FF5722;
  background-color: rgba(255, 255, 255, 0.7);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.clear-btn.disabled {
  color: #BDBDBD;
  background-color: rgba(255, 255, 255, 0.4);
}

/* 历史记录列表 */
.history-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.item-type {
  display: flex;
  align-items: center;
}

.mbti-type {
  font-size: 36rpx;
  font-weight: bold;
  color: #6A3DE8;
  margin-right: 15rpx;
}

.type-title {
  font-size: 28rpx;
  color: #FF9800;
}

.item-date {
  font-size: 24rpx;
  color: #9E9E9E;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
  padding-right: 40rpx;
}

.delete-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #9E9E9E;
  font-size: 30rpx;
  font-weight: bold;
}

.delete-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 60rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><circle cx="50" cy="25" r="20" fill="%23E0E0E0"/><circle cx="40" cy="20" r="3" fill="white"/><circle cx="60" cy="20" r="3" fill="white"/><path d="M40,30 Q50,25 60,30" stroke="%23BDBDBD" fill="none" stroke-width="2"/><rect x="30" y="45" width="40" height="25" rx="4" fill="%23E0E0E0"/><line x1="30" y1="80" x2="70" y2="80" stroke="%23E0E0E0" stroke-width="4"/><line x1="40" y1="90" x2="60" y2="90" stroke="%23E0E0E0" stroke-width="4"/></svg>');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #9E9E9E;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #BDBDBD;
}

/* 底部按钮 */
.footer {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.footer-btn {
  width: 45%;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  outline: none;
}

.home-btn {
  background: linear-gradient(to bottom, #9E9E9E, #757575); /* 灰色渐变 */
  box-shadow: 0 6rpx 12rpx rgba(117, 117, 117, 0.3);
}

.start-btn {
  background: linear-gradient(to bottom, #FF9800, #F57C00); /* 橙色渐变 */
  box-shadow: 0 6rpx 12rpx rgba(245, 124, 0, 0.3);
}

.footer-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

/* 装饰元素 */
.decoration {
  position: absolute;
  z-index: 1;
}

.star1 {
  top: 100rpx;
  right: 60rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" fill="%23FFD700"/></svg>');
  background-size: contain;
  animation: float 3s ease-in-out infinite;
}

.star2 {
  bottom: 180rpx;
  left: 70rpx;
  width: 30rpx;
  height: 30rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" fill="%23FFD700"/></svg>');
  background-size: contain;
  animation: float 4s ease-in-out infinite;
}

.bubble1 {
  top: 200rpx;
  left: 50rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  animation: float 3.5s ease-in-out infinite;
}

.bubble2 {
  bottom: 120rpx;
  right: 80rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  animation: float 5s ease-in-out infinite;
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
} 