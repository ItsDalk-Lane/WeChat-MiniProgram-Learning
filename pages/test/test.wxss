/* pages/test/test.wxss */
.test-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(to bottom, #B3E5FC, #81D4FA);
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

/* 云朵装饰 */
.cloud {
  position: absolute;
  background: white;
  border-radius: 50%;
  filter: drop-shadow(0 5rpx 5rpx rgba(0,0,0,0.1));
}

.cloud1 {
  width: 200rpx;
  height: 80rpx;
  top: 100rpx;
  left: 50rpx;
  animation: float 10s ease-in-out infinite;
}

.cloud1:before,
.cloud1:after {
  content: '';
  position: absolute;
  background: white;
  border-radius: 50%;
}

.cloud1:before {
  width: 100rpx;
  height: 100rpx;
  top: -50rpx;
  left: 25rpx;
}

.cloud1:after {
  width: 80rpx;
  height: 80rpx;
  top: -30rpx;
  right: 25rpx;
}

.cloud2 {
  width: 150rpx;
  height: 60rpx;
  top: 150rpx;
  right: 60rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.cloud2:before,
.cloud2:after {
  content: '';
  position: absolute;
  background: white;
  border-radius: 50%;
}

.cloud2:before {
  width: 75rpx;
  height: 75rpx;
  top: -40rpx;
  left: 20rpx;
}

.cloud2:after {
  width: 60rpx;
  height: 60rpx;
  top: -25rpx;
  right: 20rpx;
}

/* 进度条 */
.progress-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 10;
}

.progress {
  width: 90%;
  margin-bottom: 10rpx;
  height: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.7);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 问题卡片 */
.question-card {
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  margin-bottom: 30rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.card-inner {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 卡通形象 */
.character-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  height: 200rpx;
}

.character {
  width: 150rpx;
  height: 200rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="150" height="200" viewBox="0 0 150 200"><circle cx="75" cy="60" r="50" fill="%236A3DE8"/><circle cx="55" cy="50" r="10" fill="white"/><circle cx="95" cy="50" r="10" fill="white"/><circle cx="55" cy="50" r="5" fill="black"/><circle cx="95" cy="50" r="5" fill="black"/><path d="M60,75 Q75,85 90,75" stroke="black" fill="none" stroke-width="3"/><rect x="40" y="110" width="70" height="70" rx="10" fill="%235D3FD3"/><rect x="25" y="150" width="30" height="40" rx="5" fill="%235D3FD3"/><rect x="95" y="150" width="30" height="40" rx="5" fill="%235D3FD3"/></svg>');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  transition: transform 0.3s ease;
}

.character-happy {
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="150" height="200" viewBox="0 0 150 200"><circle cx="75" cy="60" r="50" fill="%236A3DE8"/><circle cx="55" cy="50" r="10" fill="white"/><circle cx="95" cy="50" r="10" fill="white"/><circle cx="55" cy="50" r="5" fill="black"/><circle cx="95" cy="50" r="5" fill="black"/><path d="M50,80 Q75,100 100,80" stroke="black" fill="none" stroke-width="3"/><rect x="40" y="110" width="70" height="70" rx="10" fill="%235D3FD3"/><rect x="25" y="150" width="30" height="40" rx="5" fill="%235D3FD3"/><rect x="95" y="150" width="30" height="40" rx="5" fill="%235D3FD3"/></svg>');
  transform: translateY(-10rpx);
}

/* 问题气泡 */
.question-bubble {
  position: relative;
  background-color: #FFE082;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.question-bubble:after {
  content: '';
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  border-width: 0 20rpx 20rpx 20rpx;
  border-style: solid;
  border-color: transparent transparent #FFE082 transparent;
}

.question-text {
  font-size: 34rpx;
  color: #333;
  text-align: center;
  font-weight: bold;
  line-height: 1.4;
}

/* 选项 */
.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  display: flex;
  background-color: #F5F5F5;
  border-radius: 16rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  align-items: center;
  border: 2rpx solid transparent;
}

.option-item.selected {
  background-color: #E3F2FD;
  transform: scale(1.02);
  box-shadow: 0 4rpx 8rpx rgba(106, 61, 232, 0.3);
  border-color: #6A3DE8;
}

.option-letter {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #6A3DE8;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-size: 36rpx;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.option-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.3;
}

/* 导航按钮 */
.navigation-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  position: relative;
  z-index: 5;
}

.nav-btn {
  width: 45%;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
}

.btn-text {
  position: relative;
  z-index: 2;
}

.prev-btn {
  background: linear-gradient(to bottom, #9E9E9E, #757575); /* 灰色渐变 */
  box-shadow: 0 6rpx 12rpx rgba(117, 117, 117, 0.3);
}

.next-btn {
  background: linear-gradient(to bottom, #FF9800, #F57C00); /* 橙色渐变 */
  box-shadow: 0 6rpx 12rpx rgba(245, 124, 0, 0.3);
}

.nav-btn:before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
}

.nav-btn:active:not(.disabled):before {
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    opacity: 1;
    width: 0;
    height: 0;
  }
  100% {
    opacity: 0;
    width: 200rpx;
    height: 200rpx;
  }
}

.nav-btn.disabled {
  opacity: 0.6;
  box-shadow: none;
  transform: translateY(0);
}

.nav-btn:active:not(.disabled) {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

/* 装饰元素 */
.decoration {
  position: absolute;
  z-index: 1;
  pointer-events: none;
}

.star1 {
  top: 100rpx;
  right: 60rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" fill="%23FFD700"/></svg>');
  background-size: contain;
  animation: float 3s ease-in-out infinite;
}

.star2 {
  bottom: 180rpx;
  left: 70rpx;
  width: 30rpx;
  height: 30rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" fill="%23FFD700"/></svg>');
  background-size: contain;
  animation: float 4s ease-in-out infinite;
}

.bubble1 {
  top: 200rpx;
  left: 50rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  animation: float 3.5s ease-in-out infinite;
}

.bubble2 {
  bottom: 120rpx;
  right: 80rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  animation: float 5s ease-in-out infinite;
}

.balloon {
  bottom: 300rpx;
  right: 30rpx;
  width: 60rpx;
  height: 80rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 150"><path d="M50,10 C20,10 20,50 40,80 C45,90 50,90 60,80 C80,50 80,10 50,10 Z" fill="%23FF4081"/><path d="M50,80 L47,110 L53,110 Z" fill="%23FF4081"/><path d="M47,110 L53,110 L50,120 Z" fill="%23FF4081"/></svg>');
  background-size: contain;
  animation: float 6s ease-in-out infinite;
}

.rainbow {
  bottom: -50rpx;
  left: -100rpx;
  width: 400rpx;
  height: 200rpx;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 200"><path d="M0,200 C100,100 300,100 400,200" stroke="%23FF5252" stroke-width="20" fill="none"/><path d="M0,200 C100,120 300,120 400,200" stroke="%23FFAB40" stroke-width="20" fill="none"/><path d="M0,200 C100,140 300,140 400,200" stroke="%23FFEB3B" stroke-width="20" fill="none"/><path d="M0,200 C100,160 300,160 400,200" stroke="%238BC34A" stroke-width="20" fill="none"/><path d="M0,200 C100,180 300,180 400,200" stroke="%234FC3F7" stroke-width="20" fill="none"/></svg>');
  background-size: contain;
  opacity: 0.3;
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
  100% {
    transform: translateY(0px);
  }
} 